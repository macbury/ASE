<div class="list">
	<div class="preview" style="background-image: url(<%= anime.poster.url(:thumb) %>)"></div>
	<article>
		<header><h2><%= link_to anime.name, anime %></h2></header>
		<div class="info">
			<%= t('anime.episodes') %>: <strong><%= anime.episodes_count %></strong> | 
			<%= t('anime.last_update') %>: <strong><%= distance_of_time_in_words_to_now anime.updated_at %></strong> <%= t('datetime.distance_in_words.ago') %>
		</div>
		<p><%= description truncate(anime.description, :length => 400) %></p>
	</article>
</div>